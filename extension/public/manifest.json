{
  "manifest_version": 3,
  "name": "Otter",
  "version": "1.0",
  "description": "AI-powered Terms & Conditions analyzer for your browser",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["fonts/*.ttf"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
